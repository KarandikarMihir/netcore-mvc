@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-md-4">
            <div class="card">
                <h4 class="card-header">Sign In</h4>
                <div class="card-body">
                    <form asp-action="Index" asp-controller="Login" method="POST">
                        <div class="form-group">
                            <label asp-for="Email" for="exampleInputEmail1">Email address</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" value="karandikar.mihir@outlook.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" for="exampleInputPassword1">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" value="mmmmmm">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                            <input type="checkbox" name="remember" class="form-check-input">
                            Remember Me
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary float-right">Sign in</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-8 text-center" style="padding-top: 35px;">
            <iframe
                src="https://giphy.com/embed/l3q2UyW34cT2rcgko"
                style="max-width: 100%"
                width="480"
                height="270"
                frameBorder="0"
                class="giphy-embed"
            ></iframe>
        </div>
    </div>
</div>